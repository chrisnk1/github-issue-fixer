{
    "name": "@fix-together/web",
    "version": "0.1.0",
    "type": "module",
    "description": "Web UI for GitHub issue fixing",
    "scripts": {
        "dev": "concurrently \"pnpm:dev:server\" \"pnpm:dev:client\"",
        "dev:server": "tsx watch server/index.ts",
        "dev:client": "next dev",
        "build": "next build && tsc --project tsconfig.server.json",
        "start": "node dist/server/index.js",
        "test": "vitest",
        "typecheck": "tsc --noEmit && tsc --project tsconfig.server.json --noEmit",
        "clean": "rm -rf .next dist *.tsbuildinfo"
    },
    "dependencies": {
        "@fix-together/core": "workspace:*",
        "@fix-together/mcp-client": "workspace:*",
        "fastify": "^4.25.0",
        "@fastify/cors": "^8.5.0",
        "@fastify/websocket": "^9.0.0",
        "@fastify/static": "^6.12.0",
        "next": "^14.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-diff-view": "^3.2.0",
        "prism-react-renderer": "^2.3.1",
        "zustand": "^4.5.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "typescript": "^5.3.3",
        "tsx": "^4.7.0",
        "concurrently": "^8.2.2",
        "vitest": "^1.2.0",
        "autoprefixer": "^10.4.17",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1"
    }
}