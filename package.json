{
  "name": "github-issue-fixer",
  "version": "0.1.0",
  "private": true,
  "description": "Collaborative GitHub issue fixer with E2B sandboxes and AI-powered analysis",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:integration": "pnpm --filter @fix-together/core test:integration",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "e2b": "^2.7.0"
  }
}
